extends ../layouts/common
block content
    h1(class="text-primary") Login
    
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login" method='POST')
        div(class="form-group mb-3")
            label(for="email") Email: 
            input(id="email", class="form-control", name='email', type="text" value=values ? values.email : "")
        div(class="form-group mb-3")
            label(for="password") Password: 
            input(id="password", class="form-control", name='password', type="password", value=values ? values.password : "")
        
        button(class="btn btn-primary") Login