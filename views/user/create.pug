extends ../layouts/common
block content
    h1(class="text-primary") Create New User
    
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/api/users/create" method='POST')
        div(class="form-group mb-3")
            label(for="name") Name: 
            input(id="name", class="form-control", name='name', type="text" value=values ? values.name : "")
        div(class="form-group mb-3")
            label(for="phone") Phone: 
            input(id="phone", class="form-control", name='phone', type="text", value=values ? values.phone : "")
        div(class="form-group mb-3")
            label(for="email") Email: 
            input(id="email", class="form-control", name='email', type="text", value=values ? values.email : "")
        div(class="form-group mb-3")
            input(id="password", class="form-control", name='password', type="hidden", value="123456")
        button(class="btn btn-primary") Create