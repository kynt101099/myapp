extends ../layouts/common
block content 
    h2(class="text-primary") User
    
    .d-flex.align-center
        form(action="/users/search", method="get", class='d-flex') 
            div(class="input-group mb-3")
                input(class="form-control" type="text" name='q')
                div(class="input-group-append")
                    button(class="btn btn-primary ml-2") Search
  
    table(class="table")
        tr 
            td Name
            td Phone 
            td Email
            td 
                a(class="btn btn-primary", href="/users/create") New
        each user in users 
            tr 
                td= user.name 
                td= user.phone 
                td= user.email
                td
                    a(class="btn-btn-light", href='/users/' + user.id) View

    nav(aria-label="Page navigation example")
    ul(class="pagination")
        li(class="page-item")
            a(class="page-link" href="/users?page=1") 1
        li(class="page-item")
            a(class="page-link" href="/users?page=2") 2